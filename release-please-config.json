{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "refactor",
      "section": "Refactors"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "ci",
      "section": "CI",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "Miscellaneous",
      "hidden": true
    }
  ],
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
    }
  }
}